---
/**
 * Send Email with Template Example
 *
 * Demonstrates using Resend's hosted templates feature.
 * Templates are created in the dashboard and referenced by ID.
 *
 * @see https://resend.com/docs/dashboard/templates/introduction
 */

import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Templates">
  <PageHeader
    title="Email Templates"
    description="Send emails using Resend hosted templates with dynamic variables."
  />

  <form id="template-form" class="form">
    <div class="field">
      <label for="to">To</label>
      <input
        id="to"
        type="email"
        value="delivered@resend.dev"
        required
        placeholder="delivered@resend.dev"
      />
    </div>

    <div class="field">
      <label for="templateId">Template ID</label>
      <input
        id="templateId"
        type="text"
        placeholder="Enter your template ID from the Resend dashboard"
        required
      />
      <span class="hint">Create templates at <a href="https://resend.com/templates" target="_blank" rel="noopener noreferrer">resend.com/templates</a></span>
    </div>

    <div class="field">
      <label for="variables">Template Variables (JSON)</label>
      <textarea id="variables" rows={4} placeholder='{"name": "John", "company": "Acme"}'>{`{"name": "John", "company": "Acme"}`}</textarea>
      <span class="hint">Variable names are case-sensitive and must match your template</span>
    </div>

    <button type="submit" id="submit-btn">Send Template Email</button>
  </form>

  <div id="result" class="result" style="display: none;"></div>

  <div class="code-example">
    <h2>Code Example</h2>
    <pre><code>{`const { data, error } = await resend.emails.send({
  from: 'Acme <onboarding@resend.dev>',
  to: ['delivered@resend.dev'],
  subject: 'Welcome!',
  // Template replaces html/text content
  template: {
    id: 'your-template-id',
    // Variables MUST match your template exactly (case-sensitive)
    variables: {
      name: 'John',
      company: 'Acme',
    },
  },
});`}</code></pre>
  </div>

  <div class="info-box">
    <h3>Template Tips</h3>
    <ul>
      <li>Templates must be <strong>published</strong> before use</li>
      <li>Variable names are <strong>case-sensitive</strong></li>
      <li>Cannot combine template with html/text/react</li>
      <li>Create and manage templates in the <a href="https://resend.com/templates" target="_blank" rel="noopener noreferrer">Resend dashboard</a></li>
    </ul>
  </div>
</Layout>

<script>
  const form = document.getElementById('template-form') as HTMLFormElement;
  const btn = document.getElementById('submit-btn') as HTMLButtonElement;
  const resultDiv = document.getElementById('result') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    btn.disabled = true;
    btn.textContent = 'Sending...';
    resultDiv.style.display = 'none';

    const to = (document.getElementById('to') as HTMLInputElement).value;
    const templateId = (document.getElementById('templateId') as HTMLInputElement).value;
    const variablesText = (document.getElementById('variables') as HTMLTextAreaElement).value;

    let variables = {};
    try {
      if (variablesText.trim()) {
        variables = JSON.parse(variablesText);
      }
    } catch {
      resultDiv.style.display = 'block';
      resultDiv.className = 'result error';
      resultDiv.textContent = 'Invalid JSON in variables field';
      btn.disabled = false;
      btn.textContent = 'Send Template Email';
      return;
    }

    try {
      const response = await fetch('/api/send-template', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ to, templateId, variables }),
      });

      const data = await response.json();
      resultDiv.style.display = 'block';

      if (!response.ok) {
        resultDiv.className = 'result error';
        resultDiv.textContent = data.error || 'Failed to send email';
      } else {
        resultDiv.className = 'result success';
        resultDiv.innerHTML = `<strong>Template email sent!</strong><br/>ID: ${data.id}`;
      }
    } catch {
      resultDiv.style.display = 'block';
      resultDiv.className = 'result error';
      resultDiv.textContent = 'Network error. Please try again.';
    } finally {
      btn.disabled = false;
      btn.textContent = 'Send Template Email';
    }
  });
</script>

<style>
  .form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .field label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .field input,
  .field textarea {
    padding: 0.5rem 0.75rem;
    border: 1px solid #e5e5e5;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    background: #fff;
    font-family: inherit;
  }

  .hint {
    font-size: 0.75rem;
    color: #999;
  }

  .hint a {
    color: #666;
  }

  button[type='submit'] {
    padding: 0.625rem 1rem;
    background: #1a1a1a;
    color: #fff;
    border: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
  }

  button[type='submit']:hover {
    opacity: 0.9;
  }

  button[type='submit']:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .result {
    padding: 1rem;
    border-radius: 0.375rem;
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .result.success {
    background: #f0fdf4;
    border: 1px solid #bbf7d0;
    color: #166534;
  }

  .result.error {
    background: #fef2f2;
    border: 1px solid #fecaca;
    color: #991b1b;
  }

  .code-example {
    margin-top: 2rem;
  }

  .code-example h2 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  pre {
    background: #1a1a1a;
    color: #e5e5e5;
    padding: 1rem 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-size: 0.8125rem;
    line-height: 1.6;
  }

  .info-box {
    margin-top: 2rem;
    padding: 1rem 1.25rem;
    border-radius: 0.5rem;
    background: #f0f0f0;
    border: 1px solid #e5e5e5;
  }

  .info-box h3 {
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .info-box ul {
    list-style-position: inside;
    font-size: 0.875rem;
    color: #666;
  }

  .info-box ul li {
    margin-bottom: 0.5rem;
  }

  .info-box a {
    color: #1a1a1a;
    text-decoration: underline;
  }
</style>
