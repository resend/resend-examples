---
/**
 * Base Layout
 *
 * HTML shell with navigation for all pages.
 * Uses Astro's slot mechanism for page content.
 */


const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Resend + Astro Examples</title>
    <style>
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #1a1a1a;
        background: #fafafa;
        min-height: 100vh;
      }

      nav {
        background: #fff;
        border-bottom: 1px solid #e5e5e5;
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        gap: 2rem;
      }

      nav a {
        color: #666;
        text-decoration: none;
        font-size: 0.875rem;
      }

      nav a:hover {
        color: #1a1a1a;
      }

      nav .logo {
        font-weight: 700;
        color: #1a1a1a;
        font-size: 1rem;
      }

      main {
        max-width: 48rem;
        margin: 0 auto;
        padding: 3rem 1rem;
      }

      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e5e5;
        text-align: center;
        font-size: 0.875rem;
        color: #999;
      }

      footer a {
        color: #666;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/" class="logo">Resend + Astro</a>
      <a href="/send-email">Send</a>
      <a href="/attachments">Attachments</a>
      <a href="/scheduling">Scheduling</a>
      <a href="/templates">Templates</a>
      <a href="/domains">Domains</a>
      <a href="/audiences">Audiences</a>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>
        View the source on
        <a
          href="https://github.com/resend/resend-examples"
          target="_blank"
          rel="noopener noreferrer">GitHub</a
        >
        &middot; Built with
        <a href="https://resend.com" target="_blank" rel="noopener noreferrer"
          >Resend</a
        >
      </p>
    </footer>
  </body>
</html>
